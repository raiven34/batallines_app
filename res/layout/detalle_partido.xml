<LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:id="@+id/layout1" 
    android:background="@drawable/batfon">
   

   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:background="#CCCCCC"
        android:focusable="true">
        <ImageView android:layout_height="wrap_content" 
   		   	  android:src="@drawable/conectado"
		      android:id="@+id/img2" 
		      android:layout_width="15dip"
		      android:layout_marginTop="2dip">
		      		      
        </ImageView>
       <TextView
        android:id="@+id/usr_name2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#B40404"
        android:textSize="16dip"
        android:layout_marginLeft="15dip"
        


        />            
   </FrameLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#777474"
        android:gravity="center"
        android:focusable="true">

        <TextView
            android:id="@+id/local"
            android:textSize="18dp"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textColor="#B3B43D"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>
        <TextView
            android:id="@+id/goleslocal"
            android:textColor="#B3B43D"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18dp"
            android:gravity="center"        />
        <TextView
            android:id="@+id/vs"
            android:textColor="#B3B43D"
            android:layout_width="30dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            
            android:gravity="center"/>

        <TextView
            android:id="@+id/golesvisitante"
            android:textColor="#B3B43D"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textSize="18dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
             
            android:gravity="center"/>
        <TextView
            android:id="@+id/visitante"
            android:textSize="18dp"
            android:textColor="#B3B43D"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>        

    </LinearLayout>  

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo"
        android:focusable="true">

        <TextView
            android:id="@+id/fecha"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3B43D"
            android:text="fecha"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>
        <TextView
            android:id="@+id/hora"
            android:textSize="18dp"
            android:textColor="#B3B43D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hora"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"        />
        <TextView
            android:id="@+id/lugar"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3B43D"
            android:text="lugar"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>
        <TextView
            android:id="@+id/mvp"
            android:textSize="18dp"
            android:textColor="#B3B43D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mvp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"        />
        <ImageView
        android:id="@+id/foto"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="Descripción del contenido de la imagen"
        android:src="@drawable/anonimo"/>
        <TextView
            android:id="@+id/estadisticas"
            android:textSize="18dp"
            android:textColor="#B3B43D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadisticas:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"        />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFCFC"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


               <TextView
                    android:id="@+id/foto"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="#B40404"
                    android:text="Foto"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="5dip"/>     
                <TextView
                    android:id="@+id/jug"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#B40404"
                    android:text="Jugadores"
                    android:textAppearance="?android:attr/textAppearanceSmall" 
                    android:layout_marginTop="5dip"/>



                <ImageView
                     android:id="@+id/gol"
                     android:layout_width="20dp"
                     android:layout_height="30dp"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
                     android:contentDescription="Descripción del contenido de la imagen"
                     android:src="@drawable/balon" />
                <ImageView
                     android:id="@+id/asi"
                     android:layout_width="20dp"
                     android:layout_height="30dp"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
                     android:contentDescription="Descripción del contenido de la imagen"
                     android:src="@drawable/asistencias" />       
                <ImageView
                     android:id="@+id/ama"
                     android:layout_width="20dp"
                     android:layout_height="30dp"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
                     android:contentDescription="Descripción del contenido de la imagen"
                     android:src="@drawable/amarilla" /> 
                <ImageView
                     android:id="@+id/roj"
                     android:layout_width="20dp"
                     android:layout_height="30dp"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
                     android:contentDescription="Descripción del contenido de la imagen"
                     android:src="@drawable/roja" />             



        </LinearLayout>          
        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ListView_est"
            android:layout_width="fill_parent"
            
            android:layout_height="fill_parent" >
        </ListView>


    </LinearLayout>  





</LinearLayout>