<LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:id="@+id/layout1" 
    android:background="@drawable/batfon">
   

   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:background="#CCCCCC"
        android:focusable="true">
        <ImageView android:layout_height="wrap_content" 
   		   	  android:src="@drawable/conectado"
		      android:id="@+id/img2" 
		      android:layout_width="15dip"
		      android:layout_marginTop="2dip">
		      		      
        </ImageView>
       <TextView
        android:id="@+id/usr_name2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#B40404"
        android:textSize="16dip"
        android:layout_marginLeft="15dip"
        


        />            
   </FrameLayout>
       <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >
          
        <Spinner
            android:id="@+id/Spinnerjor"  
            android:layout_height="wrap_content"  
            android:prompt="@string/jornada"  
            android:layout_width="wrap_content"  
            android:entries="@array/temporadas">            
        </Spinner>
        <Button 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Cargar"
             android:id="@+id/cargar"
             
             android:textColor="#21610B"
             android:gravity="center"
        />
    </LinearLayout> 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#777474"
        android:gravity="center"
        android:focusable="true">

        <TextView
            android:id="@+id/local"
            android:textSize="18dp"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textColor="#B3B43D"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>
        <TextView
            android:id="@+id/goleslocal"
            android:textColor="#B3B43D"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18dp"
            android:gravity="center"        />
        <TextView
            android:id="@+id/vs"
            android:textColor="#B3B43D"
            android:layout_width="30dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            
            android:gravity="center"/>

        <TextView
            android:id="@+id/golesvisitante"
            android:textColor="#B3B43D"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textSize="18dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
             
            android:gravity="center"/>
        <TextView
            android:id="@+id/visitante"
            android:textSize="18dp"
            android:textColor="#B3B43D"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            
            android:gravity="center"/>        

    </LinearLayout>  
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#FFFCFC"
    android:orientation="horizontal" >


       <TextView
            android:id="@+id/cabfoto"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#B40404"
            android:text="Foto"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="5dip"/>     
        <TextView
            android:id="@+id/cabjug"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#B40404"
            android:text="Jugadores"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginTop="5dip"/>

        <TextView
            android:id="@+id/cabmedia"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#B40404"
            android:text="Media"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginTop="5dip"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cabmax"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#B40404"
            android:text="Max"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginTop="5dip"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cabmin"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="#B40404"
            android:text="Min"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginTop="5dip"
            android:gravity="center"/>

 

</LinearLayout>  
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#666"
        
        android:focusable="true">

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ListView_est"
            android:layout_width="fill_parent"
            
            android:layout_height="fill_parent" >
        </ListView>
    </FrameLayout>  






</LinearLayout>